<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MusicMarket</title>
	<link rel="shortcut icon" type="image/x-icon" href="images/favicon.png" />
	<link rel="stylesheet" href="~/theme/plugins/themefisher-font/style.css">
	<link rel="stylesheet" href="~/theme/plugins/bootstrap/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/theme/plugins/animate/animate.css">
	<link rel="stylesheet" href="~/theme/plugins/slick/slick.css">
	<link rel="stylesheet" href="~/theme/plugins/slick/slick-theme.css">
	<link rel="stylesheet" href="~/theme/css/style.css">

</head>

<body id="body">
	<header>
	<section class="top-header">
		<div class="container">
			<div class="row">
				<div class="col-md-4 col-xs-12 col-sm-4">
					<div class="contact-number">
						<i class="tf-ion-ios-telephone"></i>
						<span>0129- 12323-123123</span>
					</div>
				</div>
				<div class="col-md-4 col-xs-12 col-sm-4">
					<!-- Site Logo -->
					<div class="logo text-center">
						<h1>MusicMarket</h1>
					</div>
				</div>
				<div class="col-md-4 col-xs-12 col-sm-4">
					<!-- Cart -->
					<ul class="top-menu text-right list-inline">
						
						<li class="dropdown cart-nav dropdown-slide">
								<a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index"><i class="tf-ion-android-cart"></i>Cart</a>
						</li><!-- / Cart -->
						<!-- Search -->
						<li class="dropdown search dropdown-slide">
							<a href="#!" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">
								<i class="tf-ion-ios-search-strong"></i> Search
							</a>
							<ul class="dropdown-menu search-dropdown">
								<li>
									<form action="post"><input type="search" class="form-control" placeholder="Search..."></form>
								</li>
							</ul>
						</li><!-- / Search -->
						<!-- Languages -->
						<li class="commonSelect">
							<select class="form-control">
								<option>EN</option>
								<option>TR</option>
							</select>
						</li><!-- / Languages -->

					</ul><!-- / .nav .navbar-nav .navbar-right -->
				</div>
			</div>
		</div>
	</section><!-- End Top Header Bar -->
	<!-- Main Menu Section -->
	<section class="menu">
		<nav class="navbar navigation">
			<div class="container">
				<div class="navbar-header">
					<h2 class="menu-title">Main Menu</h2>
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
							aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>

				</div><!-- / .navbar-header -->
				<!-- Navbar Links -->
				<div id="navbar" class="navbar-collapse collapse text-center">
					<ul class="nav navbar-nav">

						<!-- Home -->
						<li class="dropdown ">
								<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
							<li class="dropdown dropdown-slide">
								<a class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="350"
								   role="button" aria-haspopup="true" aria-expanded="false">
									Shop <span class="tf-ion-ios-arrow-down"></span>
								</a>
								<ul class="dropdown-menu">
									<li><a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">All</a></li>
									<li><a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Category" asp-route-id="1">Guitars</a></li>
									<li><a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Category" asp-route-id="2">Pianos</a></li>
									<li><a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Category" asp-route-id="3">Bowed Strings</a></li>
									<li><a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Category" asp-route-id="4">Drums - Percussions</a></li>
									<li><a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Category" asp-route-id="5">Amp - Effects</a></li>
								</ul>
							</li>
							<li class="dropdown ">
								<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
							</li>
							<li class="dropdown ">
								<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
							</li>
							<li class="dropdown ">
								<partial name="_LoginPartial" />
							</li>
							@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
							{
								<li class="dropdown dropdown-slide">
									<a class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="350"
									   role="button" aria-haspopup="true" aria-expanded="false">
										Management <span class="tf-ion-ios-arrow-down"></span>
									</a>
									<ul class="dropdown-menu">
										<li><a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="AdminIndex">Product</a></li>
									</ul>
								</li>
							}
					</ul>
				</div>
			</div
		</nav>
	</section>
	</header>
	<div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


	<footer class="footer section text-center">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<ul class="social-media">
						<li>
							<a href="https://www.facebook.com/themefisher">
								<i class="tf-ion-social-facebook"></i>
							</a>
						</li>
						<li>
							<a href="https://www.instagram.com/themefisher">
								<i class="tf-ion-social-instagram"></i>
							</a>
						</li>
						<li>
							<a href="https://www.twitter.com/themefisher">
								<i class="tf-ion-social-twitter"></i>
							</a>
						</li>
						<li>
							<a href="https://www.pinterest.com/themefisher/">
								<i class="tf-ion-social-pinterest"></i>
							</a>
						</li>
					</ul>
					<ul class="footer-menu text-uppercase">
						<li>
							<a href="contact.html">CONTACT</a>
						</li>
						<li>
							<a href="shop.html">SHOP</a>
						</li>
						<li>
							<a href="pricing.html">Pricing</a>
						</li>
						<li>
							<a href="contact.html">PRIVACY POLICY</a>
						</li>
					</ul>
					<p class="copyright-text">Copyright &copy;2022, Designed &amp; Developed by Beyza Erkan</p>
				</div>
			</div>
		</div>
	</footer>

	<script src="~/theme/plugins/jquery/dist/jquery.min.js"></script>
	<script src="~/theme/plugins/bootstrap/js/bootstrap.min.js"></script>
	<script src="~/theme/plugins/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.js"></script>
	<script src="~/theme/plugins/instafeed/instafeed.min.js"></script>
	<script src="~/theme/plugins/ekko-lightbox/dist/ekko-lightbox.min.js"></script>
	<script src="~/theme/plugins/syo-timer/build/jquery.syotimer.min.js"></script>
	<script src="~/theme/plugins/slick/slick.min.js"></script>
	<script src="~/theme/plugins/slick/slick-animation.min.js"></script>

	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCC72vZw-6tGqFyRhhg5CkF2fqfILn2Tsw"></script>
	<script type="text/javascript" src="~/theme/plugins/google-map/gmap.js"></script>

	<script src="~/theme/js/script.js" asp-append-version="true"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
