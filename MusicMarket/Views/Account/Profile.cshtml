@{
}
<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h1 class="page-name">Dashboard</h1>
                    <ol class="breadcrumb">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="active">My account</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="user-dashboard page-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul class="list-inline dashboard-menu text-center">
                    <li><a asp-controller="Order" asp-action="Index">Orders</a></li>
                    <li><a class="active" asp-controller="Account" asp-action="Profile" >Profile Details</a></li>
                </ul>
                <div class="dashboard-wrapper dashboard-user-profile">
                    <div class="media">
                        <div class="pull-left text-center" href="#!">
                            <img class="media-object user-img" src="https://ecpr.eu/images/ProfileDefaultPictures/Avatar/default-avatar.jpg" alt="Image">
                        </div>
                        <div class="media-body">
                            <ul class="user-profile-list">
                                <li><span>User ID:</span>@Model.Id</li>
                                <li><span>Full Name:</span>@Model.UserName</li>
                                <li><span>Email:</span>@Model.Email</li>
                                <li><span>Email Confirmed:</span>@Model.EmailConfirmed</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
