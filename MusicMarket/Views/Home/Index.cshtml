<section class="product-category section">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="title text-center">
					<h2>Product Category</h2>
				</div>
			</div>
			<div class="col-md-6">
				<div class="category-box">
					<a href="#!">
						<img src="https://images.unsplash.com/photo-1618591008353-ad40f4adc4ef?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NDB8fGd1aXRhcnxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60" alt="guitar" />
						<div class="content">
							<h3>Guitars</h3>
							<p>For professional musicians</p>
						</div>
					</a>	
				</div>
				<div class="category-box">
					<a href="#!">
						<img src="https://plus.unsplash.com/premium_photo-1661858662286-3602a42f8ba6?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="drums" />
						<div class="content">
							<h3>Drums</h3>
							<p>Top quality instruments</p>
						</div>
					</a>	
				</div>
			</div>
			<div class="col-md-6">
				<div class="category-box category-box-2">
					<a href="#!">
						<img src="https://images.unsplash.com/photo-1552422530-9b41dc72286b?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80" alt="piano" />
						<div class="content">
							<h3>Pianos</h3>
							<p>In stock at special prices</p>
						</div>
					</a>	
				</div>
			</div>
		</div>
	</div>
</section>

	<section class="products section bg-gray">
		<div class="container">
			<div class="row">
				<div class="title text-center">
					<h2>Trendy Products</h2>
				</div>
			</div>
			<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-md-4">
					<div class="product-item">
						<div class="product-thumb">
							<img class="img-responsive" src="@item.ImageUrl" alt="product-img" />
							<div class="preview-meta">
								<ul>
									<li>
										<span data-toggle="modal" data-target="#product-modal">
											<i class="tf-ion-ios-search-strong"></i>
										</span>
									</li>
									<li>
										<a href="#!"><i class="tf-ion-ios-heart"></i></a>
									</li>
									<li>
										<a href="#!"><i class="tf-ion-android-cart"></i></a>
									</li>
								</ul>
							</div>
						</div>
						<div class="product-content">
							<h4><a asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id">@item.Title</a></h4>
							<p class="price">$@item.Price</p>
						</div>
					</div>
				</div>
			}
			</div>
		</div>
	</section>

